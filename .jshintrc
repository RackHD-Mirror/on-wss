{
    "maxerr"        : 50,

    //Enforcing
    "bitwise" : true,
    "camelcase" : false,
    "curly" : true,
    "es3" : false,
    "eqeqeq" : true,
    "forin" : true,
    "freeze" : true,
    "immed" : false,
    "indent" : false,
